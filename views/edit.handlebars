<div class="container">

    <div class="jumbotron">
        <h1 class="text-center">Code Snippets Saving App</h1>
        <div class="text-center" id="buttons-div">
            <a href="/"><button class="btn btn-success">Home</button></a>
            <a href="/search"><button class="btn btn-primary">Search For A Snippet</button></a>
            <a href="/api/logout"><button class="btn btn-danger">Logout</button></a>
        </div>
    </div>

    <div class="row">
        <div class="col-8 offset-2">
            <h3 class="text-center">Edit</h3>
            <form action="/api/edit/{{data.id}}" method="post" id="add-form">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input name="title" class="form-control" id="title-input" value="{{data.title}}">
                </div>
                <div class="form-group">
                    <label for="tags">Tags, separated with comma (optional)</label>
                    <input name="tags" class="form-control" id="tags-input" value="{{data.tags}}">
                </div>
                <div class="form-group">
                    <label for="code">Code</label>
                    <textarea name="code" class="form-control" id="code-input" rows="5">{{data.code}}</textarea>
                </div>
                <input class="btn btn-primary" type="submit" id="submit-button" value="Submit">
            </form>
        </div>

    </div>

    <footer>
        <hr>
        <p>
            <a href="/api/all">Snippets API Data</a> |
            <a href="https://www.github.com/adnanyousef/snippet-web" target="_blank">GitHub Repo</a> |
            Signed in as: <span id="email-display"></span>
        </p>
    </footer>

</div>

<script src="/assets/js/edit.js"></script>
